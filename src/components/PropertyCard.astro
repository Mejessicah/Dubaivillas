---
interface Props {
  title: string;
  price: string;
  location: string;
  bedrooms: number;
  bathrooms: number;
  area: string;
  image: string;
}

const { title, price, location, bedrooms, bathrooms, area, image } = Astro.props;
---

<div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
  <div class="relative h-64">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover"
    />
    <div class="absolute top-4 right-4 bg-luxury-dark text-white px-4 py-2 rounded">
      {price}
    </div>
  </div>
  <div class="p-6">
    <h3 class="font-playfair text-xl mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{location}</p>
    <div class="flex justify-between text-sm text-gray-500">
      <span>{bedrooms} Bedrooms</span>
      <span>{bathrooms} Bathrooms</span>
      <span>{area}</span>
    </div>
    <button class="w-full mt-4 bg-luxury-gold text-white py-2 rounded hover:bg-opacity-90 transition-colors">
      View Details
    </button>
  </div>
</div>